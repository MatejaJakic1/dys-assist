<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_adhd_pop_up"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bgColor">

    <EditText
        android:id="@+id/text_adhd_pop_up"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/sign_in_and_up_edit_text_style"
        android:ems="10"
        android:hint="@string/text_adhd_pop_up"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:letterSpacing="0.2"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/darkGrey"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/rating_adhd_pop_up"
        style="@style/CustomRatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="50dp"
        android:background="@color/greenColor"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_adhd_pop_up"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_adhd_pop_up_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="@color/btnColor"
        android:letterSpacing="0.2"
        android:text="@string/button_add"
        android:textColor="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_adhd_pop_up" />
</androidx.constraintlayout.widget.ConstraintLayout>